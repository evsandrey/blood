<div class="container row m-t-1">
  <table class="table table-sm">
  <thead>
    <tr class="bg-info">
      <th>Time</th>
      <th>User</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.created_at %></td>
        <td><%= message.user.full_name %></td>
        <td><%= message.body %></td>
      </tr>
    <% end %>
  </tbody>
  </table
</div>
<%= paginate @messages %>