<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Please sign up</h2>
  <label for="inputEmail" class="sr-only">Email address</label>
  <%= f.email_field :email, autofocus: true , :class => "form-control first", placeholder: "Email address" %>
  
  <label for="inputPassword" class="sr-only">Password</label>
  <%= f.password_field :password, autocomplete: "off", :class => "form-control mid", placeholder: "Password" %>

  <label for="inputPassword" class="sr-only">Repeat password</label>
  <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control last", placeholder: "Repeat password" %>

  <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
  
<% end %>


