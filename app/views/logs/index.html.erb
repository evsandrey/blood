<%= search_form_for @q ,:html => { :class => "form-inline" } do |f| %>

  <div class="form-group col-sm-3">
    <%= f.label "Module" %>
    <%= f.search_field :module_name_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label :level %>
    <%= f.search_field :level_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label :message %>
    <%= f.search_field :message_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3 col-sm-bottom">
    <%= f.submit "Search", :class => "btn btn-primary" %>
  </div>
<% end %>

<pre>
  <code class="accesslog">
    <% @logs.each do |log| %>
      [<%= in_user_timezone(log.created_at) %>]  <%= log.module_name %> <%= log.level %> <%= log.message %>
    <% end %>
  </code>
</pre>
<%= paginate @logs %>